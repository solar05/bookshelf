<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center border-bottom mb-4 pb-2"><%=  t('books.index') %></h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% if @books.empty? %>
                <div class="card mx-auto">
                    <h2 class="card-title text-center mb-2"><%= t("books.empty") %></h2>
                    <div>
                        <%= link_to t("books.add"), new_book_path, class: "btn btn-primary w-100" %>
                    </div>
                </div>
            <% else %>
                <% @books.each do |book| %>
                    <div class="col">
                        <div class="card">
                            <% if book.cover.attached? %>
                                <%= image_tag(book.cover,
                                              class: "card-img-top",
                                              width: 100,
                                              height: 400) %>
                            <% else %>
                                <%= image_tag(image_path("cover_missing.png"),
                                              class: "card-img-top",
                                              width: 100,
                                              height: 400) %>
                            <% end %>
                            <div class="card-body">
                                <h6 class="card-title text-center"><%= book.name %></h6>
                                <div class="btn-group w-100" role="group" aria-label="Books actions">

                                    <%= link_to t('books.show'), book, class: "btn btn-primary border border-dark" %>
                                    <%= link_to t('books.edit'), edit_book_path(book), class: "btn btn-success border border-dark" %>
                                    <%= link_to t('books.destroy'), book, method: :delete, data: { confirm: t('books.confirm_delete') }, class: "btn btn-danger border border-dark" %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
        <%= paginate @books %>
    </div>
</div>
