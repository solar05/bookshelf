<div class="card w-50 mx-auto rounded">
    <h1 class="card-title text-center border-bottom mb-4 pb-2 bg-secondary text-white rounded-top"><%=  t('session.auth') %></h1>
    <div class="card-body text-center">
        <%= form_tag sessions_path do %>
            <div class="form-group">
                <%= label_tag :email %><br />
                <%= text_field_tag :email, params[:email], class: "form-control" %>
            </div>
            <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password, "", class: "form-control"  %>
            </div>
            <div class="button">
                <%= submit_tag t('session.log_in'), class: "btn btn-primary w-100 mt-2" %>
            </div>
        <% end %>
        <%= link_to(t("session.not_registered"), sign_up_path, class: "link-primary") %>
    </div>
</div>
